<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="2">
    <title>SCANOSS Code Compare</title>
    <organization>com.scanoss</organization>
    <domains enable_localSystem="true"/>
    <options customize="never" require-scripts="true" rootVolumeOnly="true" />

    <!-- Define documents displayed at various steps -->
    <welcome    file="welcome.html"    mime-type="text/html" />
    <license    file="license.html"    mime-type="text/html" />
    <conclusion file="conclusion.html" mime-type="text/html" />

    <pkg-ref id="com.scanoss.code-compare">
        <bundle-version/>
    </pkg-ref>

    <options customize="never" require-scripts="false"/>
    <choices-outline>
        <line choice="default">
            <line choice="com.scanoss.code-compare"/>
        </line>
    </choices-outline>

    <choice id="default"/>
    <choice id="com.scanoss.code-compare" visible="false">
        <pkg-ref id="com.scanoss.code-compare"/>
    </choice>

    <pkg-ref id="com.scanoss.code-compare" version="0" onConclusion="none">SCANOSS_Code_Compare.pkg</pkg-ref>

</installer-gui-script>
